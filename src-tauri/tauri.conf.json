{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Typability",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs":{
        "all": true,
        "scope": ["**"]
      },
      "os":{
        "all": true
      },
      "app": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "window": {
        "all": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "shiki.typability",
      "longDescription": "a WYSIWYG markdown editor based on Milkdown.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "minimumSystemVersion":"11.3",
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "template": "wix-assets/main.wxs",
          "bannerPath": "wix-assets/banner.png",
          "dialogImagePath": "wix-assets/dialog.png",
          "license": "../LICENSE"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 680,
        "resizable": true,
        "title": "Typability",
        "width": 540,
        "center": true,
        "transparent": true,
        "decorations": false
      }
    ]
  }
}
